<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="main.pfmandroid"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:debuggable="true" >
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ExpendActivity"
            android:label="@string/title_activity_expend" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="main.pfmandroid.MainActivity" />
        </activity>
        <activity
            android:name=".EarnActivity"
            android:label="@string/title_activity_earn" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="main.pfmandroid.MainActivity" />
        </activity>
        <activity
            android:name=".TransferActivity"
            android:label="@string/title_activity_transfer" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="main.pfmandroid.MainActivity" />
        </activity>
        <activity
            android:name=".BalanceActivity"
            android:label="@string/title_activity_balance" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="main.pfmandroid.MainActivity" />
        </activity>
    </application>

</manifest>